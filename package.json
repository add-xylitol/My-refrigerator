{
  "name": "smart-fridge",
  "version": "0.1.0",
  "private": true,
  "description": "MVP workspace for AI-powered fridge inventory and recipe flows.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
